<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.TestResultsFragment">

    <TextView
        android:id="@+id/testPassedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="26dp"
        android:padding="12dp"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/resultsPieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/testPassedTitle"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/resultsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/resultsPieChart"
        android:textSize="20dp"
        android:background="@color/cardview_light_background"
        android:padding="12dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/resultsTextView"
        android:textSize="20dp"
        android:background="@color/cardview_light_background"
        android:padding="12dp"/>

    <Button
        android:id="@+id/back_to_school_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Главный экран"
        tools:layout_editor_absoluteX="9dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>